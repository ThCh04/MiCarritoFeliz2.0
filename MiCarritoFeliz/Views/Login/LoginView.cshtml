@{
    ViewBag.Title = "Login";
  // Layout = "~/Views/Shared/_LogInLayout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-6 offset-3">
            <div class="card">
                <div class="card-header bg-primary text-black">
                    <div class="text-center">
                        <h4>Login</h4>
                    </div>
                </div>
                <div class="card-body">
                    <div class="text-center">
                        <svg class="mx-auto my-3 justify-content-center bi bi-person" xmlns="http://www.w3.org/2000/svg" width="40" height="40" fill="currentColor" viewBox="0 0 16 16">
                            <path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6Zm2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0Zm4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4Zm-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10Z" />
                        </svg>
                    </div>
                    <form id="logfrm">
                        <div class="mb-3">
                            <label for="user" class="form-label">Email Address: </label>
                            <input name="user" type="text" class="form-control">
                        </div>
                        <div class="mb-3">
                            <label for="passwd" class="form-label">Password: </label>
                            <input name="passwd" type="password" class="form-control">
                        </div>
                        <button type="submit" class="btn btn-primary float-end">Iniciar Sesión</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


@section scripts
{
    <script>
        $(document).ready(function()
        {
            $("#logfrm").submit(function(e)
            {
                e.preventDefault();
                url = "@Url.Content("~/login/log")"
                parametros = $(this).serialize();

                $.post(url, parametros, function (data)
                {
                    if (data == 1)
                    {
                        document.location.href = "@Url.Content("~/home/index")"

                    }
                    else
                    {
                        alert(data)
                    }
                })
            })
        })
    </script>
}